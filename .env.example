# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=munilens
POSTGRES_USER=munilens
POSTGRES_PASSWORD=munilens_dev_password

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_dev_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password

# AWS Configuration (for S3 and Textract)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=munilens-documents

# OpenAI / LLM Configuration
OPENAI_API_KEY=your_openai_api_key
LLM_ENDPOINT=https://api.openai.com/v1
LLM_MODEL=gpt-4

# External API Keys
EMMA_API_KEY=your_emma_api_key
SEC_EDGAR_USER_AGENT=YourCompany contact@yourcompany.com
CENSUS_API_KEY=your_census_api_key
FRED_API_KEY=your_fred_api_key

# OAuth2/OIDC Configuration
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_AUTHORITY=https://login.microsoftonline.com/your_tenant_id
OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# Airflow Configuration (optional)
AIRFLOW__CORE__EXECUTOR=CeleryExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://munilens:munilens_dev_password@localhost/airflow
AIRFLOW__CELERY__RESULT_BACKEND=db+postgresql://munilens:munilens_dev_password@localhost/airflow
AIRFLOW__CELERY__BROKER_URL=redis://:redis_dev_password@localhost:6379/0
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Security
SECRET_KEY=your_secret_key_for_jwt_signing
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Feature Flags
ENABLE_OCR=true
ENABLE_LLM_EXTRACTION=true
ENABLE_GRAPH_FEATURES=true
ENABLE_REAL_TIME_UPDATES=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Model Configuration
MODEL_VERSION=v1
FEATURE_STORE_PATH=./data/models/features
MODEL_ARTIFACTS_PATH=./data/models/artifacts
SHAP_CACHE_PATH=./data/models/shap_cache

# Batch Processing
BATCH_SIZE=10
MAX_WORKERS=4
INGESTION_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Document Processing
MAX_FILE_SIZE_MB=100
SUPPORTED_FORMATS=pdf,docx,xlsx
OCR_LANGUAGE=eng
